#!/bin/bash

set -ex

cargo build
cargo build --no-default-features
cargo build --no-default-features --features std,ssl-rustls
cargo build --no-default-features --features std,ssl-native-tls
cargo check

cargo test
cargo test --no-default-features --features std,ssl-native-tls

